<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Blog</title>
    <nav class="navbar navbar-default">
        <div class="container">
          <div class="navbar-header">
            <p class="navbar-brand">DAILY JOURNAL</p>
          </div >
            <ul class="navbar-nav navbar-right">
              <!-- 6 -->
              <li id="home"><a href="/">HOME</a></li>
              <li id="about"><a href="/about">ABOUT US</a></li>
              <li id="contact"><a href="/contact">CONTACT US</a></li>
              
              <a href='/compose'><button class="btn btn-primary">Add New</button></a>
            </ul>
        </div>
      </nav>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Blog Articles</h1>
        <a href="/articles/new" class="btn btn-success">New Article</a>

        <% articles.forEach(article => {%>
            <div class="card mt-4">
                <div class="card-body">
                    <h4 class="card-title"><%=article.title%></h4>
                    <div class="card-subtitle text-muted mb-2">
                        <%=article.createdAt.toLocaleString()%>
                    </div>
                    <div class="card-text mb-2"><%=article.description%></div>
                    <a href="articles/<%=article.slug%>" class="btn btn-primary">Read More</a>
                    <a href="articles/edit" class="btn btn-secondary">Edit</a>
                    <form action="/articles/<%=article.id%>?_method=DELETE" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>